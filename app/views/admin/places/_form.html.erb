<div class="col-md-6 ml-8">
  <!--begin::Quick Example-->
  <div class="card card-primary card-outline mb-4">
    <!--begin::Header-->
    <div class="card-header">
      <div class="card-title">Place Details</div>
    </div>
    <!--end::Header-->
    <!--begin::Form-->
    <%= form_with(model: [:admin, @place], local: true) do |form| %>
      <!--begin::Body-->
      <div class="card-body">
        <% if @place.errors.any? %>
          <div class="alert alert-danger">
            <h4>
              <%= pluralize(@place.errors.count, "error") %> prohibited this place from being saved:
            </h4>
            <ul>
              <% @place.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :address, class: 'form-label' %>
          <%= form.text_field :address, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :city, class: 'form-label' %>
          <%= form.text_field :city, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :state, class: 'form-label' %>
          <%= form.text_field :state, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :country, class: 'form-label' %>
          <%= form.text_field :country, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :postal_code, class: 'form-label' %>
          <%= form.text_field :postal_code, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :latitude, class: 'form-label' %>
          <%= form.text_field :latitude, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :longitude, class: 'form-label' %>
          <%= form.text_field :longitude, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :category, class: 'form-label' %>
          <%= form.text_field :category, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :phone_number, class: 'form-label' %>
          <%= form.text_field :phone_number, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :website, class: 'form-label' %>
          <%= form.text_field :website, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :hours_of_operation, class: 'form-label' %>
          <%= form.text_area :hours_of_operation, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :rating, class: 'form-label' %>
          <%= form.text_field :rating, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :reviews_count, class: 'form-label' %>
          <%= form.number_field :reviews_count, class: 'form-control' %>
        </div>
      </div>
      <!--end::Body-->
      <!--begin::Footer-->
      <div class="card-footer">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', admin_places_path, class: 'btn btn-secondary float-end' %>
      </div>
      <!--end::Footer-->
    <% end %>
    <!--end::Form-->
  </div>
  <!--end::Quick Example-->
</div>
